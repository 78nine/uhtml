{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "NodeNext",
        "target": "esnext",
        "moduleResolution": "nodenext",
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "types",
        "forceConsistentCasingInFileNames": true,
        "checkJs": false,
        "strict": true
    },
    "include": [
        "esm/**/*.js"
    ]
}
